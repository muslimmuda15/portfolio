{
  "name": "portfolio-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean",
    "dev:web": "npm run dev --workspace=apps/web",
    "dev:ai": "cd apps/ai-backend && source venv/bin/activate && uvicorn main:app --reload --port 8000"
  },
  "devDependencies": {
    "turbo": "^2.3.3"
  },
  "packageManager": "npm@10.9.2",
  "engines": {
    "node": ">=18.0.0"
  }
}
